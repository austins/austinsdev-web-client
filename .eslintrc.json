{
    "extends": [
        "@ijsto",
        "plugin:@next/next/recommended"
    ],
    "rules": {
        "jsx-a11y/alt-text": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "operator-assignment": "warn",
        "prettier/prettier": [
            "error",
            { "arrowParens": "always", "endOfLine": "auto", "singleQuote": true, "trailingComma": "es5" }
        ],
        "react/no-danger": "off",
        "sort-keys": "off"
    }
}
